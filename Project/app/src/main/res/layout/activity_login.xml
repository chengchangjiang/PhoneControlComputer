<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.givemefive.shea.givemefive.LoginActivity"
    android:weightSum="1">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="515dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="@drawable/newicon"
                android:layout_marginTop="61dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="账  号"
                android:inputType="numberSigned"
                android:background="@drawable/round_editext"
                android:textColorHint="@color/colorusername"
                android:textColor="@color/black"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/sign_in_id"
                android:maxLines="1"
                android:layout_above="@+id/sign_in_psd"
                android:layout_alignStart="@+id/sign_in_psd"
                android:layout_marginBottom="30dp" />

            <EditText
                android:layout_width="250dp"
                android:background="@drawable/round_editext"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/colorusername"
                android:ems="10"
                android:hint="密  码"
                android:id="@+id/sign_in_psd"
                android:layout_above="@+id/sign_in_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/sign_in_btn"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="登 录"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/sign_in_psd"
                android:background="@drawable/round_btn"/>


            <!--                android:background="@drawable/round_btn"-->




        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorchangepsd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="更改密码"
            android:id="@+id/changePSD"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorchangepsd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="注册账号"
            android:id="@+id/SignUp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|center_vertical" />

    </FrameLayout>

</LinearLayout>
