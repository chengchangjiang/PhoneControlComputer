<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.givemefive.shea.givemefive.SignupActivity"
    android:weightSum="1">

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="@drawable/newicon"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="numberSigned"
                android:background="@drawable/round_editext"
                android:textColorHint="@color/colorusername"
                android:textColor="@color/black"
                android:ems="15"
                android:hint="账  号"
                android:gravity="center"
                android:layout_below="@id/imageView2"
                android:id="@+id/sign_up_id"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp" />

            <EditText
                android:layout_width="250dp"
                android:background="@drawable/round_editext"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:gravity="center"
                android:layout_below="@id/sign_up_id"
                android:textColor="@color/black"
                android:textColorHint="@color/colorusername"
                android:ems="25"
                android:hint="密  码"
                android:id="@+id/sign_up_psd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

            <EditText
                android:layout_width="250dp"
                android:background="@drawable/round_editext"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:textColorHint="@color/colorusername"
                android:layout_below="@id/sign_up_psd"
                android:ems="25"
                android:hint="再次输入密码"
                android:id="@+id/sign_up_psd2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="400dp" />

            <Button
                android:id="@+id/sign_up_btn"
                style="?android:textAppearanceSmall"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/round_btn"
                android:text="注册"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignLeft="@id/sign_up_psd2"
                android:layout_marginTop="70dp"
                android:layout_below="@id/sign_up_psd"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="&lt; 返回"
                android:id="@+id/back1"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
