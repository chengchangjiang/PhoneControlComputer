<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:background="#1E90FF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/bakc_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/base_activity_back"
			android:background="@drawable/theme_button_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/bakc_button"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:text="返回"/>
        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            />
        <ImageButton
            android:visibility="invisible"
            android:id="@+id/right_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:background="@drawable/theme_button_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/showinfo_relativeLayout"
        android:visibility="gone"
        android:background="#ffeeee"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:id="@+id/exclamation_mark_imagevie"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/base_activity_mark"
        />

        <TextView
            android:id="@+id/info_textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/exclamation_mark_imagevie"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_info"
            android:textColor="#7f7f7f" />
        <ImageButton
            android:visibility="invisible"
            android:id="@+id/info_right_imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@null"
            android:background="@drawable/theme_button_background"
            />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/main_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_main_background">
        
        
    </FrameLayout>
    

</LinearLayout>
